@model IEnumerable<Lastadmissionproject.Models.ApplicantDetail>

@{
    ViewBag.Title = "Index";
}

<div>
    <h2 style="display: inline-block; float: left;">LIST OF CANDIDATES</h2>

    <section class="search-bar" style="display: inline-block; float: right;">
        @using (Html.BeginForm("Index", "ApplicantDetails", FormMethod.Post))
        {
            <input type="text" placeholder="search here" name="text" />
            <button type="submit" class="btn btn-outline-dark">Search</button>
        }


        <div>
            <div class="input-container">
            </div>
        </div>
    </section>
</div>
<br>
<br>
<br>

@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CandidateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MotherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HigherSecondaryAggregateMarks)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)

        </th>

    </tr>

    @foreach (var item in Model)
    {

        if (item.CandidateId != 14)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CandidateId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HigherSecondaryAggregateMarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseId)
                </td>



                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CandidateId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CandidateId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CandidateId })
                </td>
            </tr>
        }
    }

</table>
}
else
            {
                <h4 style="text-align: center;">NO CANDIDATE FOUND!</h4>
            }
