@model IEnumerable<Lastadmissionproject.Models.ApplicantDetail>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        .table {
            margin-bottom: 20px;
            padding: 20px;
            background-color: rgb(255,255,255,0.5);
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            backdrop-filter: blur(5px);
        }

            .table th {
                background-color: #772953;
                color: white;
            }

            .table tr:hover {
                background-color: #fedec7;
            }



        body {
            background-color: #f4f4f4;
            background-image: url('https://img.freepik.com/free-vector/hand-painted-watercolor-abstract-watercolor-background_23-2149023492.jpg?size=626&ext=jpg&ga=GA1.1.951333187.1685453264&semt=ais');
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
</head>











<div>
    <h2 style="display: inline-block; float: left;">LIST OF CANDIDATES</h2>

    <section class="search-bar" style="display: inline-block; float: right;">
        @using (Html.BeginForm("Index", "ApplicantDetails", FormMethod.Post))
        {
            <input type="text" placeholder="search here" name="text" />
            <button type="submit" class="btn btn-outline-dark">Search</button>
        }


        <div>
            <div class="input-container">
            </div>
        </div>
    </section>
</div>
<br>
<br>
<br>

@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CandidateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.HigherSecondaryAggregateMarks)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.CourseName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllotmentStatus)

        </th>
       


    </tr>

    @foreach (var item in Model)
    {

        if (item.CandidateId != 14)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CandidateId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.HigherSecondaryAggregateMarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courses.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllotmentStatus)
                </td>



                <td>
                   
                    @Html.ActionLink("Details", "Details", new { id = item.CandidateId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CandidateId })
                </td>
            </tr>
        }
    }

</table>
}
else
            {
                <h4 style="text-align: center;">NO CANDIDATE FOUND!</h4>
            }
